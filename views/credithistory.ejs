                <h5 class="card-title">Credit Transaction List</h5>
                <p class="card-description">
                 <code>LIst Of Credit Transaction Order By Date ASC</code>
                </p>
                <div class="table-responsive pt-3">
                  <table class="table table-striped project-orders-table" >
                    <thead>
                      <tr>
                        <th class="ml-5">#</th>
                        <th>Customer Name</th>
                        <th>Product Description</th>
                        <th>Total Credit Amount</th>
                        <th>Date</th>
                     
                      </tr>
                    </thead>
                    <tbody>
                        <% var credithistory; %>
                      <% if (creditlog.length >0){ %>
                          <% var i =0; %> 
                          <% credithistory = creditlog %> 
                        <% creditlog.forEach(function(row){ %>
                          <% i++ ; %>
                          <% var date1 = new Date(row.createdat); %>
                          <% var date2 = new Date(); %>
                            <% var diffTime = Math.abs(date2 - date1); %>
                             <% var diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)); %>
                          <tr>
                            <td># <%= i %></td>
                            <td style="text-transform: uppercase;">
                              
                              <% var cust =  row.customername %>
                              <% if (customer.length >0){ %>
                                                              
                                <% customer.forEach(function(row){ %>
                                  <% if (cust == row.customername){ %>
                              <%= row.customername %> <br>
                                    
                                     <a href="tel: <%= row.customerphone %> "> Call <%= row.customerphone %> </a>    
                                    <% } %>
                                  <% })} else { %>
                                            
                                    <%  } %>
                            </td>
                            <td style="text-transform: uppercase;">Desc/Size : &nbsp;<%= row.productdescription %> <br>
                             Item Code : &nbsp; <%= row.productcode %> <br>
                              <%= row.unitprice %> BIRR/PRS &nbsp; X &nbsp; <%= row.quantity %> <br>
                            </td>
                        
                            <td>$ <%= row.total %></td>
                            <td>
                              <%= diffDays %> days ago <br>
                              <%= row.createdat %>
                            </td>
                           
                          </tr>

                          <% })} else { %>
                      
                    <%  } %>
                   
                
                    </tbody>
                  </table>
