                <p class="card-description">
                 <code>LIst Of Credit Payment Transaction Order By Day Of Payment ASC</code>
                </p>
                <div class="table-responsive pt-3">
                  <table class="table table-striped project-orders-table">
                    <thead>
                      <tr>
                        <th class="ml-5">#</th>
                        <th>Customer Name</th>
                     
                        <th>Note</th>
                        <th>Total Amount</th>
                        <th>Payment Option</th>
                        <th>If Bank? BankName</th>
                        <th>If Bank? Transaction ID</th>
                       
                        <th>Date</th>
                       
                       
                      </tr>
                    </thead>
                    <tbody>
                      <% if (creditlog.length >0){ %>
                          <% var i =0; %> 
                          <% paymenthistory = creditlog %>
                        <% creditlog.forEach(function(row){ %>
                          <% i++ ; %>
                       
                          <% var date1 = new Date(row.createdat); %>
                          <% var date2 = new Date(); %>
                            <% var diffTime = Math.abs(date2 - date1); %>
                             <% var diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)); %>
                          <tr>
                            <td># <%= i %></td>
                            <td style="text-transform: uppercase;">
                              
                              <% var cust =  row.customername %>
                              <% if (customer.length >0){ %>
                                                              
                                <% customer.forEach(function(row){ %>
                                  <% if (cust == row.customername){ %>
                              <%= row.customername %> <br>
                                    
                                     <a href="tel: <%= row.customerphone %> "> Call <%= row.customerphone %> </a>    
                                    <% } %>
                                  <% })} else { %>
                                            
                                    <%  } %>
                            </td>
                            <td> <%= row.notes %></td>
                            <td> $<%= row.totalpayment %></td>
                            <td style="text-transform: uppercase;"> <%= row.paymentoption %> 
                            </td>
                        
                            <td><%= row.accountname %></td>

                            <td> <%= row.transactionid %></td>
                           
                            <td>
                              <%= diffDays %> days ago <br>
                              <%= row.createdat %>
                            </td>
                           
                          </tr>

                          <% })} else { %>
                      
                    <%  } %>
                   
                
                    </tbody>
