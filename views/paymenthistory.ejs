      <script>
        function isJson(str) {
    try {
        JSON.parse(str);
    } catch (e) {
        return false;
    }
    return true;
} ;  
var paymenthistory ;
 if (isJson('<%- JSON.stringify(paymenthistory) %>')){
    paymenthistory= '<%- JSON.stringify(paymenthistory) %>';
  
}else{
    //report the error
    paymenthistory = 0 ; 
} 
       console.log(paymenthistory);
$('#myTable').DataTable({
  
   
    "dataSrc": function (paymenthistory) {
      var return_data = new Array();
      for(var i=0;i< paymenthistory.length; i++){
        return_data.push({
          'paymentid': paymenthistory[i].paymentid,
          'customername': paymenthistory[i].customername,
          'notes' : paymenthistory[i].notes
        })
      }
      return return_data;
    },
              "columns": [
              { "data": "paymentid" },
              { "data": "customername" },
              { "data": "notes" },
          
          ]
